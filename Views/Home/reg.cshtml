@using DeltaSports_BarGrill.Models
@model User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hope</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>

<body>
    <div class="regHeader_container">
        <h1>Register</h1>
        <a href="/signin">Sign in.</a>
    </div>

    <form asp-action="Redgister" asp-controller="Home" method="POST">

        <span asp-validation-for="FirstName"></span>
        <input asp-for="FirstName" placeholder="First Name">

        <span asp-validation-for="LastName"></span>
        <input asp-for="LastName" placeholder="Last Name">

        <span asp-validation-for="Email"></span>
        <input asp-for="Email" placeholder="Email">

        <span asp-validation-for="Password"></span>
        <input asp-for="Password" placeholder="Password">

        <span asp-validation-for="Confirm"></span>
        <input asp-for="Confirm" placeholder="Confirm Password">

        <input type="submit" value="submit">

    </form>

</body>

</html>